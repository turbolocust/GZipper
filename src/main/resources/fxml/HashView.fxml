                <TableColumn fx:id="_hashValueColumn" editable="false" prefWidth="450.0" sortable="false" text="%hashValue.text" />
            </columns>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </TableView>
